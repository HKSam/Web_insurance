@model Web_insurance.Models.home
@{

    ViewBag.Title = "Index";
}
<div class="layui-header">
    <div class="layui-logo">保险公司个人管理系统</div>
    <!-- 头部区域（可配合layui已有的水平导航） -->
    <ul class="layui-nav layui-layout-right">
        <li class="layui-nav-item">
            <a href="javascript:;"> <img src="~/6b37da083ca1d9a63079f0609a4fc84f.jpg" class="layui-nav-img">@Model.name </a>
            <dl class="layui-nav-child">
               
                <dd><a href="~/Login.aspx">退出登陆</a></dd>
            </dl>
        </li>
    </ul>
</div>
<div class="layui-side layui-bg-black">
    <div class="layui-side-scroll">
        <!-- 左侧导航区域（可配合layui已有的垂直导航） -->
        <ul class="lefthead layui-nav layui-nav-tree  layui-nav-side" lay-filter="test">
            <li class="layui-nav-item "><a href="~/home/Index"><span class="glyphicon glyphicon-home"></span>首页</a></li>
            <li class="layui-nav-item layui-nav-itemed">
                <a class="" href="javascript:;">保单管理</a>
                <dl class="layui-nav-child">
                    <dd class="layui-this"><a href="~/pin/Index">保单录入</a></dd>
                    <dd><a href="~/man/Index">保单查询</a></dd>
                </dl>
            </li>
            <li class="layui-nav-item">
                <a href="javascript:;">人力管理</a>
                <dl class="layui-nav-child">
                    <dd><a href="~/teh/Index">新人入司</a></dd>
                    <dd><a href="~/huq/Index">现有人力</a></dd>
                </dl>
            </li>
        </ul>
    </div>
</div>
<div class="layui-body">
    <!-- 内容主体区域 -->
    <div class=" colhead col-md-12">
        <form class="layui-form" action="">
            <blockquote class=" layui-elem-quote layui-text">
                投保人
            </blockquote>
            <div class="layui-form-item">
                <label class="layui-form-label"> 投保人姓名</label>
                <div class="layui-input-block">
                    <input type="text" id="usernamet" name="usernamet" lay-verify="required" placeholder="请输入姓名" autocomplete="off" class="layui-input">
                </div>
            </div>
            <div class="layui-form-item">
                <label class="layui-form-label"> 性别</label>
                <div class="layui-input-block">
                    <input type="radio" id="sext" name="sext" value="男" title="男" checked="">
                    <input type="radio" id="sext" name="sext" value="女" title="女">
                </div>
            </div>
            <div class="layui-inline">
                <label class="layui-form-label"> 出生日期</label>
                <div class="layui-input-inline">
                    <input type="text" name="datet" id="datet" lay-verify="date" placeholder="yyyy-MM-dd" autocomplete="off" class="layui-input">
                </div>
            </div>
            <div class="layui-form-item">
                <div class="layui-inline">
                    <label class="layui-form-label"> 手机号</label>
                    <div class="layui-input-block">
                        <input type="tel" id="phonet" name="phonet" lay-verify="required|phone" autocomplete="off" class="layui-input">
                    </div>
                </div>
            </div>
            <blockquote class=" layui-elem-quote layui-text">
                被保人
            </blockquote>
            <div class="layui-form-item">
                <label class="layui-form-label">与投保人关系</label>
                <div class="layui-input-block">
                    <select id="interest" name="interest" lay-filter="aihao">
                        <option value=""></option>
                        <option value="本人">本人</option>
                        <option value="配偶">配偶</option>
                        <option value="父母">父母</option>
                        <option value="子女">子女</option>
                        <option value="朋友">朋友</option>
                    </select>
                </div>
            </div>
            <div class="layui-form-item">
                <label class="layui-form-label">被保人姓名</label>
                <div class="layui-input-block">
                    <input type="text" id="usernameb" name="usernameb" lay-verify="required" placeholder="请输入姓名" autocomplete="off" class="layui-input">
                </div>
            </div>
            <div class="layui-inline">
                <label class="layui-form-label">出生日期</label>
                <div class="layui-input-inline">
                    <input type="text" name="dateb" id="dateb" lay-verify="date" placeholder="yyyy-MM-dd" autocomplete="off" class="layui-input">
                </div>
            </div>
            <div class="layui-form-item">
                <label class="layui-form-label">性别</label>
                <div class="layui-input-block">
                    <input type="radio" id="sexb" name="sexb" value="男" title="男" checked="">
                    <input type="radio" id="sexb" name="sexb" value="女" title="女">
                </div>
            </div>
            <div class="layui-form-item">
                <div class="layui-inline">
                    <label class="layui-form-label">手机号</label>
                    <div class="layui-input-block">
                        <input type="tel" id="phoneb" name="phoneb" lay-verify="required|phone" autocomplete="off" class="layui-input">
                    </div>
                </div>
            </div>
            <blockquote class=" layui-elem-quote layui-text">
                其他信息
            </blockquote>
            <div class="layui-form-item">
                <label class="layui-form-label">保单金额</label>
                <div class="layui-input-block">
                    <input type="text" id="money" name="money" lay-verify="required" placeholder="请输入金额" autocomplete="off" class="layui-input">
                </div>
            </div>
            <div class="layui-form-item">
                <label class="layui-form-label">保单号</label>
                <div class="layui-input-block">
                    <input type="text" id="baodanid" name="baodanid" lay-verify="required" placeholder="请输入保单号" autocomplete="off" class="layui-input">
                </div>
            </div>
            <div class="layui-form-item">
                <label class="layui-form-label">工号</label>
                <div class="layui-input-block">
                    <input type="text" id="number" name="number" lay-verify="required" placeholder="请输入工号" autocomplete="off" class="layui-input">
                </div>
            </div>
            <div class="layui-inline">
                <label class="layui-form-label">录入日期</label>
                <div class="layui-input-inline">
                    <input type="text" name="datel" id="datel" lay-verify="date" placeholder="yyyy-MM-dd" autocomplete="off" class="layui-input">
                </div>
            </div>
            <div class="layui-form-item">
                <div class="layui-input-block">
                    <button class="layui-btn" lay-submit="" lay-filter="demo1">立即提交</button>
                    <button type="reset" class="layui-btn layui-btn-primary">重置</button>
                    <input type="reset" style="display:none;" />
                </div>
            </div>
        </form>
    </div>
</div>
<script>
    layui.use(['form', 'layedit', 'laydate'], function () {
        var form = layui.form
            , layer = layui.layer
            , layedit = layui.layedit
            , laydate = layui.laydate;

        //日期
        laydate.render({
            elem: '#datet'
        });
        laydate.render({
            elem: '#dateb'
        });
        laydate.render({
            elem: '#datel'
        });
        //监听指定开关
        form.on('switch(switchTest)', function (data) {
            layer.msg('开关checked：' + (this.checked ? 'true' : 'false'), {
                offset: '6px'
            });
            layer.tips('温馨提示：请注意开关状态的文字可以随意定义，而不仅仅是ON|OFF', data.othis)
        });
        //监听提交
        form.on('submit(demo1)', function (data) {
            $(function () {
                $.ajax({
                    type: "GET",
                    url: "/pin/ReturnData",
                    data: {
                        baodanid: $('#baodanid').val(),
                        usernamet: $('#usernamet').val(),
                        phonet: $('#phonet').val(),
                        sexb: $('#interest').val(),
                        usernameb: $('#usernameb').val(),
                        money: $('#money').val(),
                        number: $('#number').val(),
                        datel: $('#datel').val(),
                    },
                    success: function (data) {
                        console.log(data);
                        if (data == 0) {
                            layer.msg('提交成功', { icon: 6 });

                        }
                        else {
                            layer.msg('提交失败', { icon: 5 });
                        }
                        $("input[type=reset]").trigger("click");//触发reset按钮 
                    }
                });
            });
            return false;
        });
    });
</script>