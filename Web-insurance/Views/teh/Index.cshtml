@model Web_insurance.Models.home
@{
    ViewBag.Title = "Index";
}
<div class="layui-header">
    <div class="layui-logo">保险公司个人管理系统</div>
    <!-- 头部区域（可配合layui已有的水平导航） -->
    <ul class="layui-nav layui-layout-right">
        <li class="layui-nav-item">
            <a href="javascript:;"> <img src="~/6b37da083ca1d9a63079f0609a4fc84f.jpg" class="layui-nav-img">@Model.name </a>
            <dl class="layui-nav-child">
              
                <dd><a href="~/Login.aspx">退出登陆</a></dd>
            </dl>
        </li>
    </ul>
</div>
<div class="layui-side layui-bg-black">
    <div class="layui-side-scroll">
        <!-- 左侧导航区域（可配合layui已有的垂直导航） -->
        <ul class="lefthead layui-nav layui-nav-tree  layui-nav-side" lay-filter="test">
            <li class="layui-nav-item "><a href="~/home/Index"><span class="glyphicon glyphicon-home"></span>首页</a></li>
            <li class="layui-nav-item ">
                <a href="javascript:;">保单管理</a>
                <dl class="layui-nav-child">
                    <dd><a href="~/pin/Index">保单录入</a></dd>
                    <dd><a href="~/man/Index">保单查询</a></dd>
                </dl>
            </li>
            <li class="layui-nav-item layui-nav-itemed">
                <a href="javascript:;">人力管理</a>
                <dl class="layui-nav-child">
                    <dd class="layui-this"><a href="~/teh/Index">新人入司</a></dd>
                    <dd><a href="~/huq/Index">现有人力</a></dd>
                </dl>
            </li>
        </ul>
    </div>
</div>
<div class="layui-body">
    <!-- 内容主体区域 -->
    <div class=" colhead col-md-12">

        <form class="layui-form" action="">
            <blockquote class=" layui-elem-quote layui-text">
                新人信息
            </blockquote>
            <div class="layui-form-item">
                <label class="layui-form-label"> 姓名</label>
                <div class="layui-input-block">
                    <input type="text" id="username" name="username" lay-verify="required" placeholder="请输入姓名" autocomplete="off" class="layui-input">
                </div>
            </div>
            <div class="layui-form-item">
                <label class="layui-form-label"> 性别</label>
                <div class="layui-input-block">
                    <input type="radio"id="sext" name="sext" value="男" title="男" checked="">
                    <input type="radio"id="sext" name="sext" value="女" title="女">
                </div>
            </div>
            <div class="layui-inline">
                <label class="layui-form-label"> 出生日期</label>
                <div class="layui-input-inline">
                    <input type="text" name="datet" id="datet" lay-verify="date" placeholder="yyyy-MM-dd" autocomplete="off" class="layui-input">
                </div>
            </div>
            <div class="layui-form-item">
                <div class="layui-inline">
                    <label class="layui-form-label"> 手机号</label>
                    <div class="layui-input-block">
                        <input type="tel" id="phonet" name="phonet" lay-verify="required|phone" autocomplete="off" class="layui-input">
                    </div>
                </div>
            </div>
            <div class="layui-form-item">
                <label class="layui-form-label">籍贯</label>
                <div class="layui-input-block">
                    <input type="text" id="jiguan" name="jiguan" lay-verify="required" placeholder="如：陕西延安" autocomplete="off" class="layui-input">
                </div>
            </div>
            <div class="layui-form-item">
                <label class="layui-form-label">文化程度</label>
                <div class="layui-input-block">
                    <select id="interest" name="interest" lay-filter="aihao">
                        <option value=""></option>
                        <option value="小学">小学</option>
                        <option value="初中">初中</option>
                        <option value="高中">高中</option>
                        <option value="大专">大专</option>
                        <option value="本科">本科</option>
                        <option value="硕士">硕士</option>
                        <option value="博士">博士</option>
                    </select>
                </div>
            </div>
            <div class="layui-form-item">
                <label class="layui-form-label">毕业学校</label>
                <div class="layui-input-block">
                    <input type="text" id="school" name="school" lay-verify="required" placeholder="请输入最高学历学校" autocomplete="off" class="layui-input">
                </div>
            </div>
            <div class="layui-form-item">
                <label class="layui-form-label">婚姻状况</label>
                <div class="layui-input-block">
                    <select id="mas" name="mas" lay-filter="aihao">
                        <option value=""></option>
                        <option value="未婚">未婚</option>
                        <option value="已婚">已婚</option>
                        <option value="丧偶">丧偶</option>
                        <option value="离婚">离婚</option>
                        <option value="其他">其他</option>
                    </select>
                </div>
            </div>
            <div class="layui-form-item">
                <label class="layui-form-label">新人工号</label>
                <div class="layui-input-block">
                    <input type="text" id="numbernew" name="numbernew" lay-verify="required" placeholder="请输入工号" autocomplete="off" class="layui-input">
                </div>
            </div>
            <div class="layui-form-item">
                <label class="layui-form-label">录入工号</label>
                <div class="layui-input-block">
                    <input type="text" id="number" name="number" lay-verify="required" placeholder="请输入工号" autocomplete="off" class="layui-input">
                </div>
            </div>
            <div class="layui-inline">
                <label class="layui-form-label">加入日期</label>
                <div class="layui-input-inline">
                    <input type="text" id ="datel" name="datel" lay-verify="date" placeholder="yyyy-MM-dd" autocomplete="off" class="layui-input">
                </div>
            </div>
            <div class="layui-form-item">
                <div class="layui-input-block">
                    <button class="layui-btn" lay-submit="" lay-filter="demo1">立即提交</button>
                    <button type="reset" class="layui-btn layui-btn-primary">重置</button>
                    <input type="reset" style="display:none;" />
                </div>
            </div>
        </form>
    </div>
</div>
<script>
    layui.use(['form', 'layedit', 'laydate'], function () {
        var form = layui.form
            , layer = layui.layer
            , layedit = layui.layedit
            , laydate = layui.laydate;

        //日期
        laydate.render({
            elem: '#datet'
        });
        laydate.render({
            elem: '#datel'
        });

        //监听指定开关
        form.on('switch(switchTest)', function (data) {
            layer.msg('开关checked：' + (this.checked ? 'true' : 'false'), {
                offset: '6px'
            });
            layer.tips('温馨提示：请注意开关状态的文字可以随意定义，而不仅仅是ON|OFF', data.othis)
        });
        //监听提交
        form.on('submit(demo1)', function (data) {
            $(function () {
                $.ajax({
                    type: "GET",
                    url: "/teh/ReturnData",
                    data: {
                        username: $('#username').val(),
                        sext: $('#sext').val(),
                        datet: $('#datet').val(),
                        phonet: $('#phonet').val(),
                        jiguan: $('#jiguan').val(),
                        numbernew: $('#numbernew').val(),
                        number: $('#number').val(),
                        datel: $('#datel').val(),
                    },
                    success: function (data) {
                        console.log(data);
                        if (data == 0) {
                            layer.msg('提交成功', { icon: 6 });

                        }
                        else {
                            layer.msg('提交失败', { icon: 5 });
                        }
                        $("input[type=reset]").trigger("click");//触发reset按钮 
                    }
                });
            });
            return false;
        });
    });
</script>

